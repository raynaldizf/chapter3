<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200ED">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/headerTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter 3"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_below="@id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputAngka1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input Angka 1"
            android:layout_centerHorizontal="true"
            android:inputType="phone"

            />

        <EditText
            android:id="@+id/inputAngka2"
            android:layout_below="@id/inputAngka1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input Angka 2"
            android:layout_centerHorizontal="true"
            android:inputType="phone"

            />

        <Button
            android:id="@+id/buttonHitung"
            android:layout_below="@id/inputAngka2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="Hitung"
            android:textAllCaps="false"


            />
        <Button
            android:id="@+id/buttonReset"
            android:layout_toRightOf="@id/buttonHitung"
            android:layout_below="@id/inputAngka2"
            android:layout_marginLeft="20dp"
            android:text="Reset"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />

        <TextView
            android:id="@+id/hasil"
            android:layout_below="@id/buttonHitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hasil"

            />
        <TextView
            android:id="@+id/kondisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hasil"
            android:layout_centerHorizontal="true"
            android:text="Kondisi Alert"

            />



    </RelativeLayout>



</RelativeLayout>